---
const user = {
  vorname: 'Max',
  nachname: 'Mustermann',
  geburtsdatum: '01.01.1990',
  geburtsort: 'Berlin',
  nationalitaet: 'Deutsch',
  muttersprache: 'Deutsch',
  kinder: 2,
  kundennummer: 4711,
  warteschlange: 4708,
  servicezeit: '10:35 Uhr',
  datum: '19. Januar 2025',
  anschrift: 'Musterstraße 123, 12345 Musterstadt',
  servicefiliale: '567',
  lastUpdate: '09:51 Uhr',
};
---

<html>
  <head>
    <title>Dashboard</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      .header-box {
        margin: 20px auto;
        padding: 15px;
        border: 2px solid #000;
        background-color: #ffeb3b;
        border-radius: 4px;
        text-align: center;
        width: 50%;
        font-size: 20px;
        font-weight: bold;
        color: #000;
      }

      .content-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        margin: 20px auto;
        width: 70%;
      }

      .user-section {
        display: flex;
        width: 100%;
        gap: 20px;
      }

      .user-details {
        flex: 2;
        background-color: #fff;
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: left;
      }

      .user-details p {
        margin: 5px 0;
        font-size: 14px;
        color: #333;
      }

      .photo-placeholder {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 2px dashed gray;
        background-color: #f9f9f9;
        text-align: center;
        color: gray;
        font-size: 14px;
        height: 200px;
        width: 200px;
        border-radius: 8px;
      }

      h2 {
        font-size: 20px;
        color: #333;
        text-align: center;
        margin: 20px 0 10px;
      }

      .info-box,
.my-info-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 20px;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(0, 0, 0, 0.1);
}

/* Nummern (z.B. Warteschlange, Kundennummer) */
.info-box .number,
.my-info-box .number {
  font-size: 28px;
  font-weight: bold;
  color: #1e88e5;
}

/* Details für beide Boxen */
.info-box .details,
.my-info-box .details {
  display: flex;
  flex-direction: column;
  text-align: right;
}


/* Status */
.info-box .details .status,
.my-info-box .details .status {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

/* Letztes Update */
.info-box .details .last-update,
.my-info-box .details .last-update {
  font-size: 12px;
  color: #666;
}

/* Zusätzliche Informationen mit Kalender-Icon */
.my-info-box .additional-info {
  display: flex;
  flex-direction: row; /* Icon und Textblock nebeneinander */
  align-items: flex-start; /* Oben ausrichten */
  gap: 1px; /* Abstand zwischen Icon und Text */
  width: 100%; /* Box nutzt die gesamte Breite */
}

/* Kalender-Icon */
.my-info-box .calendar-icon {
  width: 40px; /* Angepasste Icon-Größe */
  height: 40px;
  flex-shrink: 0; /* Verhindert, dass das Icon schrumpft */
}

.my-info-box .calendar-icon svg {
  width: 100%;
  height: 100%;
  fill: #1e88e5; /* Blaues Icon */
}

.my-info-box .date-content {
  display: flex;
  flex-direction: column; /* Servicezeit und Datum untereinander */
  align-items: flex-end; /* Rechtsbündige Ausrichtung */
  text-align: right; /* Text bleibt rechtsbündig */
  font-size: 14px;
  color: #444;
  flex-grow: 1; /* Textblock nimmt den verbleibenden Platz ein */
}


.my-info-box .date-content p {
  margin: 5px 0;
}

.my-info-box .address {
  font-size: 14px;
  color: #444;
  text-align: left; /* Links ausgerichtet */
}

      .advertisement-box {
        width: 100%;
        max-width: 400px;
        height: 120px;
        margin: 20px auto;
        border: 2px solid #000;
        background-color: #ffeb3b;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-size: 18px;
        font-weight: bold;
        color: #000;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <div class="header-box">
      Servicefiliale {user.servicefiliale}
    </div>

    <!-- Content -->
    <div class="content-container">
      <!-- Persönliche Angaben und Foto -->
      <div class="user-section">
        <div class="user-details">
          <p><strong>Vorname:</strong> {user.vorname}</p>
          <p><strong>Nachname:</strong> {user.nachname}</p>
          <p><strong>Geburtsdatum:</strong> {user.geburtsdatum}</p>
          <p><strong>Geburtsort:</strong> {user.geburtsort}</p>
          <p><strong>Nationalität:</strong> {user.nationalitaet}</p>
          <p><strong>Muttersprache:</strong> {user.muttersprache}</p>
          <p><strong>Kinder:</strong> {user.kinder}</p>
          <p><strong>Kundennummer:</strong> {user.kundennummer}</p>
        </div>

        <div class="photo-placeholder">
          <p>Kundenfoto</p>
        </div>
      </div>

      <!-- Überschrift für Info-Boxen -->
      <h2>Warteschlange</h2>

      <!-- Info-Box -->
      <div class="info-box">
        <div class="number">{user.warteschlange}</div>
        <div class="details">
          <div class="status">In Bearbeitung</div>
          <div class="last-update">Letztes Update: {user.lastUpdate}</div>
        </div>
      </div>

      <div class="my-info-box">
        <div class="number">{user.kundennummer}</div>
        <div class="details">
          <div class="status">Wartend</div>
          <div class="additional-info">
            <!-- Kalender-Icon -->
            <div class="calendar-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zm0-12H5V6h14v2z" />
              </svg>
            </div>
            <!-- Servicezeit und Datum -->
            <div class="date-content">
              <p><strong>Servicezeit:</strong> {user.servicezeit}</p>
              <p><strong>Datum:</strong> {user.datum}</p>
            </div>
          </div>
          <!-- Anschrift separat -->
          <div class="address">
            <p><strong>Anschrift:</strong> {user.anschrift}</p>
          </div>
        </div>
      </div>

    <!-- Werbebanner -->
    <div class="advertisement-box">
      Werbebanner
    </div>
  </body>
</html>