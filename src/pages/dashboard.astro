---
const user = {
  vorname: 'Max',
  nachname: 'Mustermann',
  geburtsdatum: '01.01.1990',
  geburtsort: 'Berlin',
  nationalitaet: 'Deutsch',
  muttersprache: 'Deutsch',
  kinder: 2,
  kundennummer: 4711,
  warteschlange: 4708,
  servicezeit: '10:35 Uhr',
  datum: '19. Januar 2025',
  anschrift: 'Musterstraße 123, 12345 Musterstadt',
  servicefiliale: 'BERLINER TAFEL e.V.',
  lastUpdate: '09:51 Uhr',
  isMuslim: true
};
import { Image } from 'astro:assets';
import qrcode from '../assets/qrcode.png'
import foto from '../assets/foto.png'
---

<html>
  <head>
    <title>Dashboard</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>


@media (max-width: 600px) {
  .info-box,
  .muslim-status-box,
  .advertisement-box {
    width: 95%; /* Nutze fast die gesamte Breite */
    margin: 10px auto; /* Zentriert */
  }

  .info-row {
    flex-direction: column; /* Boxen untereinander anordnen */
    gap: 15px; /* Abstand zwischen den Boxen */
  }
}

@media (max-width: 600px) {
  .qrcode-container {
    flex-direction: column; /* Elemente untereinander */
  }

  .qrcode-image,
  .photo-image {
    width: 80%; /* Breite für kleinere Geräte flexibel */
    max-width: 250px; /* Maximalgröße begrenzen */
  }
}

@media (max-width: 600px) {
  .advertisement-box {
    width: 90%; /* Nutze 90% der Breite */
    margin: 10px auto; /* Reduzierter Abstand */
  }

  .content-container,
  .info-row,
  .qrcode-container {
    width: 100%; /* Nutzt die gesamte Breite */
    margin: 0 auto; /* Zentriert den Container */
  }
}

@media (max-width: 600px) {
  /* Hier kommen alle mobilen Anpassungen rein */

  .header-box,
    .customer-number-box {
      width: 100% /* Nutze die gesamte Breite minus Rand */
      margin: 10px auto; /* Weniger Abstand für kleine Geräte */
    }

  .qrcode-container {
        flex-direction: column; /* Elemente untereinander */
        justify-content: center; /* Vertikal zentriert */
        align-items: center; /* Horizontal zentriert */
        gap: 20px; /* Geringerer Abstand */
    }

    .qrcode-image,
    .photo-image {
        width: 80%; /* Breite für kleinere Geräte flexibel */
        max-width: 250px; /* Begrenzung der Maximalgröße */
        height: auto; /* Beibehaltung des Seitenverhältnisses */
    }

  .user-section {
      flex-direction: column; /* Elemente untereinander */
      gap: 10px; /* Weniger Abstand */
  }

  .user-details {
      width: 100%; /* Nutzt die gesamte Breite */
  }

  .photo-placeholder {
      width: 100px;
      height: 100px;
  }

  .info-box,
  .my-info-box {
      flex-direction: column; /* Inhalte stapeln */
      align-items: flex-start; /* Links ausgerichtet */
  }

  .number {
      font-size: 24px; /* Etwas kleinere Nummern */
  }
}
body {
  margin: 0; /* Entfernt unnötige äußere Abstände */
  padding: 0; /* Entfernt unnötige Innenabstände */
  box-sizing: border-box; /* Sorgt für korrekte Brechnung der Breite */
  font-family: Arial, sans-serif;
  background-color: #f4f4f4;
  width: 100%; /* Stellt sicher, dass die Breite korrekt angepasst ist */
  overflow-x: hidden; /* Verhindert horizontalen Bildlauf */
}

      .header-box {
        margin: 20px auto;
        padding: 15px;
        border: 2px solid #000;
        background-color: #ffeb3b;
        border-radius: 4px;
        text-align: center;
        width: 50%;
        font-size: 20px;
        font-weight: bold;
        color: #000;
      }

      .content-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        margin: 20px auto;
        width: 70%;
      }




  .user-details {
  flex: 1;
  min-width: 60%; /* Sicherstellen, dass es Platz hat */
  background-color: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 10px;
  text-align: left; /* Links ausgerichtet */
}

.user-details p {
  margin: 5px 0;
  font-size: 14px;
  color: #333;
}

      .photo-placeholder {
        flex: 0 0 150px; /* Feste Größe für das Foto */
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2px dashed gray;
  background-color: #f9f9f9;
  text-align: center;
  color: gray;
  font-size: 14px;
  height: 150px;
  width: 150px;
  border-radius: 8px;
      }

      h2 {
        font-size: 20px;
        color: #333;
        text-align: center;
        margin: 20px 0 10px;
      }

      .info-box,
.my-info-box {
  display: flex;
  flex-direction: row; /* Vertikal anordnen für kleine Geräte */
  align-items: center;
  justify-content: space-between; /* Platz zwischen den Elementen */
  width: 100%;
  max-width: 500px; /* Maximale Breite der Info-Box */
  margin: 0 auto; /* Zentriert die Box */
  padding: 10px;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(0, 0, 0, 0.1);
  gap: 10px; /* Abstand zwischen den Elementen */
}

/* Nummern (z.B. Warteschlange, Kundennummer) */
.info-box .number,
.my-info-box .number {
  font-size: 28px;
  font-weight: bold;
  color: #1e88e5;
  flex-shrink: 0; /* Nummer wird nicht verkleinert */
}

/* Details für beide Boxen */
.info-box .details,
.my-info-box .details {
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* Links ausgerichtet */
  justify-content: center; /* Inhalte vertikal ausrichten */
  text-align: left;
  font-size: 14px;
  color: #444;
}




/* Letztes Update */
.info-box .details .last-update,
.my-info-box .details .last-update {
  font-size: 12px;
  color: #666;
  margin-top: 5px;
}

/* Zusätzliche Informationen mit Kalender-Icon */
.my-info-box .additional-info {



  margin-top: 5px; /* Reduzierter Abstand nach oben */
  padding: 10px; /* Weniger Innenabstand */
  background-color: #e3f2fd; /* Heller blauer Hintergrund */
  border: 2px solid #1e88e5; /* Blaue Umrandung */
  border-radius: 8px; /* Abgerundete Ecken */
  font-size: 14px; /* Standard-Schriftgröße */
  color: #1e88e5; /* Blaue Schrift */
  line-height: 1.4; /* Geringere Zeilenhöhe */
  text-align: left; /* Links ausgerichtet */
}



.my-info-box .date-content {
  display: flex;
  flex-direction: column; /* Servicezeit und Datum untereinander */
  text-align: left; /* Text bleibt rechtsbündig */
  font-size: 14px;
  color: #444;
}


.my-info-box .date-content p {
  margin: 20px 0;
}

.my-info-box .address {
  font-size: 14px;
  color: #444;
  text-align: left; /* Links ausgerichtet */
}

.advertisement-box {
  width: 95%; /* Anpassung für kleinere Geräte */
  max-width: 400px; /* Maximale Breite bleibt erhalten */
  margin: 20px auto; /* Zentrierung mit reduziertem vertikalen Abstand */
  height: 100px; /* Reduzierte Höhe */
  border: 2px solid #000;
  background-color: #ffeb3b;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 16px; /* Reduzierte Schriftgröße */
  font-weight: bold;
  color: #000;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}


      .qrcode-container {
  display: flex;
  flex-direction: row; /* Elemente nebeneinander */
  justify-content: space-around; /* Platz gleichmäßig verteilen */
  align-items: center; /* Zentrieren der Elemente */
  gap: 20px; /* Abstand zwischen QR-Code und Foto */
  padding: 20px;
  background-color: #f9f9f9;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin: 20px auto;
  width: 100%;
  max-width: 400px; /* Maximalgröße begrenzen */
}

.qrcode-image,
.photo-image {
  width: 45%; /* Gleiche Breite für beide Bilder */
  max-width: 150px; /* Begrenze die Größe */
  height: auto; /* Seitenverhältnis beibehalten */
  object-fit: cover; /* Verhindert Verzerrung */
  border: 2px solid #ddd; /* Optional: Rahmen */
  border-radius: 8px; /* Abgerundete Ecken */
}

.info-row {
  display: flex;
  justify-content: center; /* Zentriert die beiden Boxen */
  align-items: center; /* Vertikale Zentrierung */
  gap: 20px; /* Abstand zwischen den Boxen */
  margin: 20px auto; /* Zentriert und mit Abstand nach oben/unten */
  max-width: 500px; /* Maximalbreite des Containers */
}

.children-box,
.muslim-status-box {
  flex: 1; /* Gleiche Breite für beide Boxen */
  padding: 10px;
  border: 2px solid #1e88e5;
  background-color: #e3f2fd;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #1e88e5;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.muslim-status-box {
  padding: 10px;
  border: 2px solid #1e88e5;
  background-color: #e3f2fd;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #1e88e5;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.info-box {
  padding: 15px; /* Weniger Innenabstand */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.advertisement-box {
  height: 100px; /* Festgelegte Höhe */
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #000;
  background-color: #ffeb3b;
  border: 2px solid #000;
  border-radius: 8px;
}

.muslim-status-box,
.info-box,
.advertisement-box {
  margin: 10px auto; /* Zentriert mit geringem Abstand */
  width: 90%; /* Dynamisch angepasst an kleinere Geräte */
  max-width: 500px; /* Maximale Breite */
}
.customer-number-box {
  margin: 20px auto;
  padding: 10px; /* Weniger Innenabstand */
  border: 2px solid #1e88e5; /* Blaue Umrandung */
  background-color: #e3f2fd; /* Heller blauer Hintergrund */
  border-radius: 8px;
  text-align: center;
  width: 80%; /* Schmalere Breite */
  max-width: 200px; /* Reduzierte maximale Breite */
  font-size: 18px; /* Kleinere Schrift */
  font-weight: bold;
  color: #1e88e5; /* Blaue Schrift */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Schatten */
}
  .info-box-red {
    background-color: #f8d7da; /* Heller roter Hintergrund */
    color: #721c24; /* Dunkelrote Schrift */
    border: 1px solid #f5c6cb; /* Passender roter Rand */
  }

  .info-box-red .number {
    color: #d93025; /* Intensives Rot für die Nummer */
  }

  .info-box .additional-info {
    margin-top: 2.5px; /* Abstand zur vorherigen Zeile */
    padding: 5px; /* Innenabstand */
    background-color: #e3f2fd; /* Heller blauer Hintergrund */
    border: 2px solid #1e88e5; /* Blaue Umrandung */
    border-radius: 8px; /* Abgerundete Ecken */
    font-size: 14px; /* Standard-Schriftgröße */
    color: #1e88e5; /* Blaue Schrift */
    line-height: 1.6; /* Zeilenhöhe für bessere Lesbarkeit */
    text-align: left; /* Links ausgerichtet */
  }

  .info-box .additional-info p {
    margin: 2px 0; /* Abstand zwischen den Absätzen */
  }

  .info-box .details .status {
    font-size: 16px;
    font-weight: bold;
    color: #333; /* Standardfarbe */
    margin-bottom: 5px; /* Abstand nach unten */
    text-align: left; /* Links ausgerichtet */
  }

  .info-box .additional-info strong {
    color: #0d47a1; /* Dunkleres Blau für Hervorhebungen */
  }
    </style>
  </head>
  <body>
    <!-- Header -->
    <div class="header-box">
      <a href={"https://www.berliner-tafel.de/"} style="text-decoration: none; font-size: 18px; color: #0070f3;">
      {user.servicefiliale}
    </div>

    <!-- Kundennummer Feld -->
<div class="customer-number-box">
  Kundennummer: {user.kundennummer}
</div>

<!-- Anzahl Kinder und Moslem-Status nebeneinander -->
<div class="info-row">
  <div class="children-box">
    Anzahl der Kinder: {user.kinder}
  </div>
  <div class="muslim-status-box">
    Status: {user.isMuslim ? "Moslem" : "Nicht Moslem"}
  </div>
</div>



    <!-- Content -->
    <div class="qrcode-container">
      <!-- QR-Code -->
      <img class="qrcode-image" src={qrcode.src} alt="QR Code" />
    
      <!-- Foto -->
      <img class="photo-image" src={foto.src} alt="Foto" />
    </div>


      <!-- Überschrift für Info-Boxen -->
      <h2>Warteschlange</h2>

      <!-- Info-Box -->
      <div class="info-box info-box-red">
        <div class="number">{user.warteschlange}</div>
        <div class="details">
          <div class="status">In Bearbeitung</div>
          <div class="last-update">Letztes Update: {user.lastUpdate}</div>
        </div>
      </div>

      <div class="info-box">
        <div class="number">{user.kundennummer}</div>
        <div class="details">
          <div class="additional-info">
            <p><strong>Servicezeit ca.:</strong> {user.servicezeit}</p>
            <p><strong>Datum:</strong> {user.datum}</p>
            <p><strong>Straße und Ort:</strong> {user.anschrift}</p>
          </div>
        </div>
      </div>

    <!-- Werbebanner -->
    <div class="advertisement-box">
      Werbebanner
    </div>
  </body>
</html>